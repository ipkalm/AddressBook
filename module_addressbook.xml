<?xml version="1.0" encoding="UTF-8"?>
<project name="module_addressbook" default="compile.module.addressbook">
  <dirname property="module.addressbook.basedir" file="${ant.file.module_addressbook}"/>
  
  <property name="module.jdk.home.addressbook" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.addressbook" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.addressbook" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.addressbook" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="addressbook.output.dir" value="${module.addressbook.basedir}/out/production/addressbook"/>
  <property name="addressbook.testoutput.dir" value="${module.addressbook.basedir}/out/test/addressbook"/>
  
  <path id="addressbook.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="addressbook.module.production.classpath">
    <path refid="${module.jdk.classpath.addressbook}"/>
  </path>
  
  <path id="addressbook.runtime.production.module.classpath">
    <pathelement location="${addressbook.output.dir}"/>
  </path>
  
  <path id="addressbook.module.classpath">
    <path refid="${module.jdk.classpath.addressbook}"/>
    <pathelement location="${addressbook.output.dir}"/>
  </path>
  
  <path id="addressbook.runtime.module.classpath">
    <pathelement location="${addressbook.testoutput.dir}"/>
    <pathelement location="${addressbook.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.addressbook">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.addressbook">
    <patternset refid="excluded.from.module.addressbook"/>
  </patternset>
  
  <path id="addressbook.module.sourcepath">
    <dirset dir="${module.addressbook.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.addressbook" depends="compile.module.addressbook.production,compile.module.addressbook.tests" description="Compile module addressbook"/>
  
  <target name="compile.module.addressbook.production" description="Compile module addressbook; production classes">
    <mkdir dir="${addressbook.output.dir}"/>
    <javac destdir="${addressbook.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.addressbook}/javac">
      <compilerarg line="${compiler.args.addressbook}"/>
      <bootclasspath refid="addressbook.module.bootclasspath"/>
      <classpath refid="addressbook.module.production.classpath"/>
      <src refid="addressbook.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.addressbook"/>
    </javac>
    
    <copy todir="${addressbook.output.dir}">
      <fileset dir="${module.addressbook.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.addressbook.tests" depends="compile.module.addressbook.production" description="compile module addressbook; test classes" unless="skip.tests"/>
  
  <target name="clean.module.addressbook" description="cleanup module">
    <delete dir="${addressbook.output.dir}"/>
    <delete dir="${addressbook.testoutput.dir}"/>
  </target>
</project>